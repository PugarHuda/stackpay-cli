{
  "name": "stackpay-cli",
  "version": "1.0.0",
  "description": "StackPay CLI - Monetize your APIs in 60 seconds with Bitcoin settlement",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "stackpay": "./bin/run.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "test": "jest",
    "postpack": "rimraf oclif.manifest.json",
    "prepack": "oclif manifest"
  },
  "oclif": {
    "bin": "stackpay",
    "dirname": "stackpay",
    "commands": "./dist/commands",
    "topicSeparator": " ",
    "topics": {
      "config": {
        "description": "Configure StackPay project settings"
      }
    }
  },
  "dependencies": {
    "@oclif/core": "^3.27.0",
    "@oclif/plugin-help": "^6.0.0",
    "@oclif/plugin-plugins": "^4.0.0",
    "@stackpay/sdk": "workspace:*",
    "@stacks/network": "^6.13.0",
    "@stacks/transactions": "^6.13.0",
    "chalk": "^4.1.2",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@oclif/test": "^3.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.0",
    "oclif": "^4.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "files": [
    "bin",
    "dist",
    "templates",
    "oclif.manifest.json"
  ],
  "keywords": [
    "stackpay",
    "stacks",
    "bitcoin",
    "micropayments",
    "api",
    "x402",
    "cli"
  ],
  "license": "MIT"
}
