# StackPay Environment Configuration
# Copy this file to .env and fill in your values

# Port to run your API on
PORT=3000

# Stacks network (testnet or mainnet)
STACKPAY_NETWORK=testnet

# Your Stacks private key (for contract interactions)
# WARNING: Never commit this to version control
STACKS_PRIVATE_KEY=

# Your Stacks payment address
STACKPAY_ADDRESS=

# Price per API call (in STX)
STACKPAY_PRICE=0.01

# Currency (STX, sBTC, USDCx)
STACKPAY_CURRENCY=STX
